<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.auth.RecoverPasswordSuccessActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:contentDescription="@string/logo_taqui"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_with_gray_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar senha"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5A72C7"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/check_image"
            android:layout_width="wrap_content"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="Sucesso"
            android:src="@drawable/check" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua senha foi recuperada com sucesso."
            android:textSize="14sp"
            android:textColor="#9366B7"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:text="Aproveite para atualizar os seus smart lockers e autenticar a sua biometria após o login, assim ficará muito mais fácil o seu login."
            android:textColor="#949494"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:text="A gente sabe como decorar senha é chato, mas faz parte da dos seus dados."
            android:textColor="#949494"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btn_login_navigation"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:backgroundTint="#9366B7"
                android:text="login"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
