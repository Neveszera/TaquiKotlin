<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.auth.SignupSuccessActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:contentDescription="@string/logo_taqui"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_with_gray_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre-se"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5A72C7"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/check_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:contentDescription="Sucesso"
            android:src="@drawable/check" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro realizado com sucesso."
            android:textSize="14sp"
            android:textColor="#949494"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Um e-mail com o seu PIN foi enviado."
            android:textSize="12sp"
            android:textColor="#949494"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guarde-o com carinho, o PIN é utilizado caso você precise"
            android:textSize="12sp"
            android:textColor="#949494"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recuperar a sua senha futuramente."
            android:textSize="12sp"
            android:textColor="#949494"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btn_login_navigation"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:backgroundTint="#9366B7"
                android:text="login"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
